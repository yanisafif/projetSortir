{% extends 'base.html.twig' %}

{% block title %}
    Profil
{% endblock %}

{% block body %}
    <div class="container">
        {# {% if is_granted('ROLE_USER') %}#}
        <h1 style="text-align: center"> {{ participant.pseudo }}</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-xs-4 col-lg-4 col-sm-4">
                <img style="height: 200px; width: auto; " src="{{ asset('uploads/photos/'~participant.photo) }}" alt="photo de profil" class="img-thumbnail" >
            </div>
            <div class="col-md-8 col-xs-8 col-lg-8 col-sm-8">
                <h3>Prénom : {{ participant.prenom }}</h3>
                <h3>Nom : {{ participant.nom }}</h3>
                <h3>Téléphone : {{ participant.telephone }}</h3>
                <h3>Email : {{ participant.email }}</h3>
                <h3>Campus : {{ participant.campus.nom }}</h3>
                {#  <a class="btn btn-secondary" href="{{ path("sortie") }}">Retour</a>#}
                <a class="btn btn-lg btn-primary" href="{{ path("main_home") }}">Retour</a>
            </div>
        </div>
    </div>
    {# {% endif %}#}
{% endblock %}